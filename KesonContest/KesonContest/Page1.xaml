<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local ="clr-namespace:KesonContest"
             x:Class="KesonContest.Page1">
    <Grid>
        <Image Source="{local:ImageResoureExtention KesonContest.Image.BackGround.png}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="gr_Connect" Grid.Column="0">
                <Button x:Name="bt_Connect"
                        Text="CONNECT"
                        TextColor="White"
                        BackgroundColor="Orange"
                        HeightRequest="70"
                        WidthRequest="140"
                        FontSize="Large"
                        CornerRadius="20"
                        Margin="50,100,50,100"
                        />
            </Grid>
            <Grid x:Name="gr_Skip" Grid.Column="1">
                <Button x:Name="bt_Skip"
                        Clicked="bt_Skip_Clicked"
                        Text="Skip"
                        TextColor="White"
                        BackgroundColor="#018fff"
                        HeightRequest="70"
                        WidthRequest="140"
                        FontSize="Large"
                        CornerRadius="20"
                        Margin="50,100,50,100"
                        >
                </Button>
                <Label Text="Hello Forms with XAML"
               FontFamily="Lobster" FontSize="50" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>